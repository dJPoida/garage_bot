        "webpack": "^5.35.0",
        "webpack-cli": "^4.6.0",
        "webpack-dev-server": "^3.11.2"
    },
    "scripts": {
        "dev": "concurrently --kill-others \"webpack serve --config webpack.config.js -w\" \"npm run watch-css\" ",
